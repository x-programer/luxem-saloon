rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the super admin
    function isSuperAdmin() {
      return request.auth.token.email == 'ringtoneboy1530@gmail.com';
    }

    // Helper function to check if user is owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (isOwner(userId) || isSuperAdmin());
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Add other collections as needed later (bookings, services, etc.)
    // For now, MVP assumes we might need to write to other collections too?
    // The user ONLY asked to fix "Verify" or "Suspend" which are on `users` collection.
    // However, for a functioning app, we probably need more. 
    // But I will strictly follow the user request to fix the specific bug first.
    // Wait, the user said "Allow ME to write to ANY document in the users collection".
  }
}
